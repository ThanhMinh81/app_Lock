<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ecc71"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutToolbarPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgChangeModeComfirm"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_pin_password" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:id="@+id/layoutNameApp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_title_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_iconApp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tvNameMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Draw pattern"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvShowPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutWrapPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <com.andrognito.patternlockview.PatternLockView
                android:id="@+id/pattern_lock_view"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_centerInParent="true"
                app:correctStateColor="#44bd32"
                app:wrongStateColor="#e84118" />


            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <Button
                        android:id="@+id/btn1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <Button
                        android:id="@+id/btn2"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <Button
                        android:id="@+id/btn3"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="23sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btn4"

                        style="@style/Widget.AppCompat.Button.Borderless"

                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onNumberClick"
                        android:padding="16dp"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <Button
                        android:id="@+id/btn5"

                        style="@style/Widget.AppCompat.Button.Borderless"

                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onNumberClick"
                        android:padding="16dp"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <Button
                        android:id="@+id/btn6"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onNumberClick"
                        android:padding="16dp"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="23sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btn7"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <Button
                        android:id="@+id/btn8"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <Button
                        android:id="@+id/btn9"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="23sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">



                    <Button
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn0"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="23sp" />


                    <Button
                        android:id="@+id/btnClear"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="4dp"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_clear"
                         android:paddingStart="50dp"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                </TableRow>

                <TableRow>

                    <CheckBox
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:button="@null"
                        android:checked="false"
                        android:background="@drawable/bg_selected_checkbox" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>